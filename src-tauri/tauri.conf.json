{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aec_demo",
  "version": "0.3.0",
  "identifier": "com.esri.aec-demo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "cross-env NODE_OPTIONS=--max_old_space_size=4096 PUBLIC_BUILD_TARGET=tauri pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "aec_demo",
        "width": 1440,
        "height": 1200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "signingIdentity": "-"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}